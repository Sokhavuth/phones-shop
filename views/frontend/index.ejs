<!--views/frontend/home.ejs-->

<link rel="stylesheet" href="/styles/frontend/index.css" />

<section class="Index region">
    <header class="header">
        <div class="inner">
            <div class="date"><%= data.date %></div>
            <div class="title">
                <a href="/"><%= data.siteTitle %></a>
                <p class="description"><%= data.description %></p>
            </div>
            <form action="/search" method="post">
                <input type="text" name="q" required placeholder="Type your word here..." />
                <input type="submit" value="Search" />
            </form>
        </div>
    </header>

    <nav class="nav region">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/styles/frontend/menu.css" />
        <%
        let home = ''
        let iPhone = ''
        let SAMSUNG = ''
        let HUAWEI = ''
        let contact = ''
        let about = ''

        if(data.route === '/'){
            home = 'active'
        }else if(data.type === "iPhone"){
            iPhone = 'active'
        }else if(data.type === "SAMSUNG"){
            SAMSUNG = "active"
        }else if(data.type === "HUAWEI"){
            HUAWEI = 'active'
        }else if(data.route === '/page/1oriwstnm41i'){
            contact = 'active'
        }else if(data.route === '/page/wrwkirgdwbbv'){
            about = 'active'
        }
        %>
        <div class="wrapper">
            <div class="topnav" id="myTopnav">
                <a href="/" class="home <%= home %>">Home</a>
                <a href="/category/iPhone" class="<%= iPhone %>">iPhone</a>
                <a href="/category/SAMSUNG" class="<%= SAMSUNG %>">SAMSUNG</a>
                <a href="/category/HUAWEI" class="<%= HUAWEI %>">HUAWEI</a>
                <a href="/page/1oriwstnm41i" class="contact <%= contact %>">Contact</a>
                <a href="/page/wrwkirgdwbbv" class="about <%= about %>">About</a>
                <a href="/admin" class="login">Login</a>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
        </div>
    </nav>
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
            x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    <div class="main region">
        <% if(data.route === "/"){ %>
            <%- include("./home") %>
        <% }else if(data.route === "/post"){ %>
            <%- include("./post") %>
        <% }else if(data.route.includes("/page")){ %>
            <%- include("./page") %>
        <% }else if(data.route === "/category"){ %>
            <%- include("./category") -%>
        <% }else if(data.route === "/search"){ %>
            <%- include("./search") %>
        <% }else if(data.route === "/user"){ %>
            <%- include("./user") %>
        <% } %>   
    </div>

    <footer class="footer region">
        <a href="https://khmerweb.deta.dev/">
            &copy; 2022 Apsara Templates
        </a>
    </footer>
</section>
